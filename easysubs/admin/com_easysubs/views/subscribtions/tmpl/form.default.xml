<form type="browse" show_header="1" show_filters="1"
	show_pagination="1" norows_placeholder="COM_FLYCART_COMMON_NORECORDS">
	
	<headerset>		
		<header name="easysubs_subscribtion_id" type="rowselect" tdwidth="20" 
		label="COM_EASYSUBS_SUBSCRIPTION_ID"
		/>
		<header name="plan_id" type="fieldsearchable"
			sortable="true" label="COM_EASYSUBS_SUBSCRIPTION_PLAN_ID"
			/>
		<header name="trail_start" type="fieldsearchable" filterclass="input-small"
			sortable="true"
			label="COM_EASYSUBS_SUBSCRIPTION_TRAIL_START"
			/>
		<header name="trail_end" sortable="true"
		label="COM_EASYSUBS_SUBSCRIPTION_STATUS"
		/>		
		<header name="enabled" type="published" sortable="true"
			tdwidth="8%" />
	</headerset>
	
	<fieldset name="items">		
		<field name="easysubs_subscribtion_id" type="selectrow" />
		
		<field name="plan_id" type="text" show_link="true"
			url="index.php?option=com_flycart&amp;view=country&amp;id=[ITEM:ID]" />
			
		<field name="trail_start" type="text" />
		<field name="trail_end" type="text" />
		<field name="enabled" type="published" />
	</fieldset>
</form>
