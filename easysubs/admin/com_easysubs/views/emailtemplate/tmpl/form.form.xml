<form validate="true" serverside_validate="true">
        <fieldset name="basic_information"
                label="COM_EASYSUBS_CUSTOMER_GROUP_BASIC"
        >
                
                <field name="subject" type="text"
                        label="COM_EASYSUBS_CUSTOMER_FIRST_NAME"
                        class="input-xxlarge"
                        required="true"
                />
                
                
                <field name="body" type="editor"
                        label="COM_EASYSUBS_CUSTOMER_PAYMENT"
                        class="input-xlarge"
                        required="true"
                />

                <field name="enabled" type="list" label="JSTATUS"
                        labelclass="flycart-label"
                        description="JFIELD_PUBLISHED_DESC" class="inputbox"
                        filter="intval" size="1" default="1"
                >
                        <option value="1">JPUBLISHED</option>
                        <option value="0">JUNPUBLISHED</option>
                </field>
        </fieldset>     
</form>

