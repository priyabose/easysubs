<form type="browse" show_header="1" show_filters="1"
	show_pagination="1" norows_placeholder="COM_FLYCART_COMMON_NORECORDS">
	
	<headerset>		
		<header name="easysubs_product_id" type="rowselect" tdwidth="20" 
		label="COM_EASYSUBS_PRODUCT_ID"
		/>
		<header name="product_title" type="fieldsearchable"
			sortable="true" label="COM_EASYSUBS_PRODUCT_TITLE"
			/>
		
		<header name="display_name"  filterclass="input-small"
			sortable="true"
			label="COM_EASYSUBS_PRODUCT_DISPLAY_NAME"
			/>
			
		<header name="enabled" type="published" sortable="true"
			tdwidth="8%" />
	</headerset>
	
	<fieldset name="items">		
		<field name="flycart_product_id" type="selectrow" />
		
		<field name="product_title" type="text" show_link="true"
			url="index.php?option=com_easysubs&amp;view=product&amp;id=[ITEM:ID]" />
		
		<field name="display_name" type="text" />	
			
		<field name="enabled" type="published" />
	</fieldset>
</form>
