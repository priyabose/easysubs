<form type="browse" show_header="1" show_filters="1"
	show_pagination="1" norows_placeholder="COM_EASYSUBS_COMMON_NORECORDS">
	
	<headerset>		
		<header name="flycart_currency_id" type="rowselect" tdwidth="20" 
		label="COM_EASYSUBS_CURRENCY_ID"
		/>
		<header name="currency_title" type="fieldsearchable"
			sortable="true" label="COM_EASYSUBS_CURRENCY_TITLE"
		/>
		
		<header name="currency_code" filterclass="input-small"
			sortable="true" label="COM_EASYSUBS_CURRENCY_CODE"			
		/>
				
		<header name="currency_symbol" sortable="true" label="COM_EASYSUBS_CURRENCY_SYMBOL"	/>		
		
		<header name="currency_value" sortable="true" label="COM_EASYSUBS_CURRENCY_VALUE" />
	
		<header name="enabled" type="published" sortable="true"
			tdwidth="8%" />
	</headerset>
	
	<fieldset name="items">		
		<field name="flycart_currency_id" type="selectrow" />
		
		<field name="currency_title" type="text" show_link="true"
			url="index.php?option=com_easysubs&amp;view=currency&amp;id=[ITEM:ID]" />
			
		<field name="currency_code" type="text" />		
		<field name="currency_symbol" type="text" />
		<field name="currency_value" type="text" />		
		<field name="enabled" type="published" />
	</fieldset>
</form>
