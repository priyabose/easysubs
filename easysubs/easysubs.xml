	<name>COM_EASYSUBS</name>
	<creationDate>Feb 2014</creationDate>
	<author>GokilaPriya Bose</author>
	<authorEmail>support@weblogicxindia.com</authorEmail>
	<authorUrl>http://weblogicxindia.com</authorUrl>
	<copyright>Copyright (c) eweblogicx.org. All rights reserved.</copyright>
